{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "build",
    "rootDir": ".",
    "lib": ["ES2022"],
    "declaration": false,
    "resolveJsonModule": true
  },
  "include": ["server.ts"],
  "exclude": ["node_modules", "dist", "src"]
}
